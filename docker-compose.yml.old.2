version: '2'
services:
  rabbitmq:
    image: rabbitmq
    ports:
     - "4369:4369"
     - "5671:5671"
     - "5672:5672"
     - "25672:25672"
    environment:
     - RABBITMQ_DEFAULT_USER=cisco
     - RABBITMQ_DEFAULT_PASS=C1sco123
  influxdb:
    image: influxdb
    ports:
     - "8083:8083"
     - "8086:8086"
    volumes:
     - $PWD:/var/lib/influxdb
    environment:
     - INFLUXDB_GRAPHITE_ENABLED=true
  vendingmachine:
    build:
      context: ./vendingMachine
      dockerfile: ./Dockerfile
    command: /usr/local/bin/python2.7 /usr/src/vendingMachine.py
    links:
      - rabbitmq
    environment:
     - RABBITMQ_DEFAULT_USER=cisco
     - RABBITMQ_DEFAULT_PASS=C1sco123
     - RABBITMQ_HOST=rabbitmq
     - RABBITMQ_QUEUE=HackZurich16
     - DELAY=1
  demolistener:
    build:
      context: ./demoListener
      dockerfile: ./Dockerfile
    command: /usr/local/bin/python2.7 /usr/src/demoListener.py
    links:
      - rabbitmq
    environment:
     - RABBITMQ_DEFAULT_USER=cisco
     - RABBITMQ_DEFAULT_PASS=C1sco123
     - RABBITMQ_HOST=rabbitmq
     - RABBITMQ_QUEUE=HackZurich16

